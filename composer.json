{
    "type": "project",
    "license": "proprietary",
    "repositories": [
        { "type": "git",  "url": "https://github.com/fardus/traits-symfony.git" },
        { "type": "git",  "url": "https://github.com/fardus/makefile.git" }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-pdo_sqlite": "*",
        "beberlei/doctrineextensions": "^1.2",
        "easycorp/easyadmin-bundle": "^2.3",
        "fardus/makefile": "dev-develop",
        "fardus/traits-symfony": "~1.1",
        "friendsofsymfony/jsrouting-bundle": "^2.5",
        "sensio/framework-extra-bundle": "^5.5",
        "stof/doctrine-extensions-bundle": "^1.4",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "*",
        "symfony/orm-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/translation": "*",
        "symfony/yaml": "*",
        "symfonycasts/reset-password-bundle": "^1.1"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.25",
        "phpstan/phpstan-deprecation-rules": "^0.12.2",
        "phpstan/phpstan-doctrine": "^0.12.13",
        "phpstan/phpstan-phpunit": "^0.12.8",
        "phpstan/phpstan-symfony": "^0.12.6",
        "slam/phpstan-extensions": "^5.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/maker-bundle": "^1.16",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "*",
        "thecodingmachine/phpstan-strict-rules": "^0.12.0",
        "vimeo/psalm": "^3.11"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
