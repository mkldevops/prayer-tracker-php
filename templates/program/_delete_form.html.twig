<form class="d-inline-block" method="post" action="{{ path('program_delete', {'id': program.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
    <button class="btn btn-link text-danger"><i class="fas fa-trash"></i></button>
</form>
