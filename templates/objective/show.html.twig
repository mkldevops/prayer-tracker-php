{% extends 'base.html.twig' %}

{% block title %}{{ 'Objective'|trans }}{% endblock %}

{% block body %}
    <div class="row text-center">
        <div class="col-1 h1">
            <a href="{{ path('program_show', {'id': objective.program.id}) }}"><i class="fas fa-caret-left"></i></a>
        </div>
        <h1 class="col-10">{{ 'Objective "%name%"'|trans({'%name%' : objective }) }}</h1>
        <div class="col-1">
            <div><a href="{{ path('objective_edit', {'id': objective.id}) }}"><i class="fas fa-edit"></i></a></div>
            {{ include('objective/_delete_form.html.twig') }}
        </div>
    </div>

    {% include 'objective/_counter.html.twig' %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objective.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ objective.number }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ objective.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ objective.createdAt ? objective.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ objective.updatedAt ? objective.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/prayer.js') }}"></script>
{% endblock %}
