<form method="post" action="{{ path('objective_delete', {'id': objective.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objective.id) }}">
    <button class="btn btn-link text-danger"><i class="fas fa-trash"></i></button>
</form>
