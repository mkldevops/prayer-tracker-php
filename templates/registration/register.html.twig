{% extends 'base.html.twig' %}

{% block title %}{{ 'Register'|trans }}{% endblock %}

{% block body %}
    <div class="offset-sm-3 col-sm-6">
        <h1 class="text-center font-weight-bold mb-5">{{ 'Register'|trans }}</h1>

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_widget(registrationForm.username) }}
            </div>

            <div class="form-group my-4">
                {{ form_widget(registrationForm.plainPassword) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-info btn-lg btn-block"><i class="fas fa-user-edit"></i> {{ 'Register'|trans }}</button>
            </div>

        {{ form_end(registrationForm) }}

        <div class="text-center mt-2"><a href="{{ path('app_home') }}" class="btn btn-link"> {{ 'Cancel'|trans }}</a></div>
    </div>
{% endblock %}
